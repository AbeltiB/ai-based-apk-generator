# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME="AI App Builder Service"
APP_VERSION="0.1.0"
DEBUG=true
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# ANTHROPIC CLAUDE API
# ============================================================================
ANTHROPIC_API_KEY="sk-ant-your-api-key-here"  # REQUIRED - Get from console.anthropic.com
ANTHROPIC_MODEL="claude-sonnet-4-20250514"
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_TEMPERATURE=0.3
ANTHROPIC_TIMEOUT=30

# ============================================================================
# RABBITMQ MESSAGE QUEUE
# ============================================================================
RABBITMQ_URL="amqp://admin:password@localhost:5672"
RABBITMQ_QUEUE_AI_REQUESTS="ai-requests"
RABBITMQ_QUEUE_AI_RESPONSES="ai-responses"
RABBITMQ_PREFETCH_COUNT=1

# ============================================================================
# REDIS CACHE
# ============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_CACHE_TTL=86400  # 24 hours
REDIS_SEMANTIC_CACHE_TTL=604800  # 7 days
REDIS_CACHE_SIMILARITY_THRESHOLD=0.95

# ============================================================================
# POSTGRESQL DATABASE
# ============================================================================
POSTGRES_HOST="localhost"
POSTGRES_PORT=5432
POSTGRES_DB="appbuilder"
POSTGRES_USER="admin"
POSTGRES_PASSWORD="password"
POSTGRES_MIN_CONNECTIONS=5
POSTGRES_MAX_CONNECTIONS=20

# ============================================================================
# PROCESSING SETTINGS
# ============================================================================
MAX_RETRIES=3
RETRY_DELAY=2
REQUEST_TIMEOUT=30

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_REQUESTS_PER_HOUR=100
RATE_LIMIT_ENABLED=true

# ============================================================================
# CANVAS SETTINGS (Mobile Screen Dimensions)
# ============================================================================
CANVAS_WIDTH=375  # iPhone standard width
CANVAS_HEIGHT=667  # iPhone standard height
CANVAS_SAFE_AREA_TOP=44  # Status bar
CANVAS_SAFE_AREA_BOTTOM=34  # Home indicator (iPhone X+)

# ============================================================================
# COMPONENT SETTINGS
# ============================================================================
MIN_TOUCH_TARGET_SIZE=44  # Minimum touch target for accessibility